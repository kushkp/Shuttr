<!DOCTYPE html>
<html>
  <head>
    <title>Shuttr</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <link rel="icon"
      type="image/png"
      href="http://res.cloudinary.com/dydhzgrty/image/upload/c_scale,w_16/v1440465105/Shuttr/shuttr_favicon_cropped.png">
  </head>
  <body>
    <%= yield %>

    <% if Rails.env.production? %>
      <% api_key = "key=AIzaSyBa1WiQTDThzn3E1eAdEG54_wtvV67pHEg" %>
    <% else %>
      <% api_key = '' %>
    <% end %>

    <script type="text/javascript"
        src="https://maps.googleapis.com/maps/api/js?<%= api_key %>&libraries=places,visualization&sensor=true_or_false"></script>
    <script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
    <script type="text/javascript" charset="utf-8">
      window.CLOUDINARY_OPTIONS = {
        cloud_name: "<%= ENV['CLOUD_NAME'] %>",
        upload_preset: "<%= ENV['UPLOAD_PRESET'] %>",
        stylesheet: "<%= asset_url 'cloudinary.css' %>",
        multiple: false
      }
    </script>
  </body>
</html>
